@model IEnumerable<Assignment_6.Controllers.PlaylistBase>

@{
    ViewBag.Title = "Index";
}
<h2>List of playlist</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TracksCount)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span class="badge">
                    @Html.DisplayFor(modelItem => item.TracksCount)
                </span>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlaylistId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlaylistId })
            </td>
        </tr>
    }
</table>